{
  "appId": "com.vibecode.lol-matchmaking",
  "productName": "LoL Matchmaking",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "src/frontend/dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "src/frontend/dist/lol-matchmaking",
      "to": "frontend/dist/lol-matchmaking",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": {
      "target": "portable",
      "arch": ["x64"]
    },
    "icon": "build/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "artifactName": "${productName}-${version}-portable.${ext}"
  },  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}",
    "unpackDirName": "LoL Matchmaking"
  },
  "publish": null
}
